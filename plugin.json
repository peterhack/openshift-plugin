      },
	  "source": {
		"stat": "master/elected"
	  }
    },
	{
      "timeseries": {
        "key": "uptime_secs",
        "unit": "Second",
		"displayname": "Master Uptime"
      },
	  "source": {
		"stat": "master/uptime_secs"
	  }
    },
	{
      "timeseries": {
        "key": "system_cpus_total",
        "unit": "Count",
		"displayname": "System CPUS Total"
      },
	  "source": {
		"stat": "system/cpus_total"
	  }
    },
	{
      "timeseries": {
        "key": "system_load_15min",
